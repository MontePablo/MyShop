<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDesc"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:background="@drawable/bg_hire_delivery_boy"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_arrow"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="26dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivMyShopLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_logo_my_shop_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_my_advertisement"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#404042"
                android:lineSpacingExtra="10sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivMyShopLogo"
                android:layout_marginTop="19dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSubscribed"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/clDesc"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSubscribedDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_advertisement_desc"
                android:fontFamily="@font/markformc"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#404042"
                android:lineSpacingExtra="10sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="21dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="19dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="19dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="292dp"
                android:background="@drawable/bg_delivery_boy_row"
                app:layout_constraintTop_toBottomOf="@id/tvSubscribedDesc"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="6dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivAdvertisement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_big_banner_sample_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="17dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_start_date"
                    android:textAllCaps="false"
                    android:fontFamily="@font/markformc_medium"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#292929"
                    android:lineSpacingExtra="4sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="37dp"
                    app:layout_constraintTop_toBottomOf="@id/ivAdvertisement"
                    android:layout_marginTop="30dp"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_calendar"
                    app:layout_constraintTop_toBottomOf="@id/ivAdvertisement"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toEndOf="@id/tvStart"
                    android:layout_marginStart="10dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvStartDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="03/07/1996"
                    android:textAllCaps="false"
                    android:fontFamily="@font/markformc_medium"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#292929"
                    android:lineSpacingExtra="4sp"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="@id/vStartDate"
                    app:layout_constraintEnd_toEndOf="@id/vStartDate"
                    app:layout_constraintBottom_toTopOf="@id/vStartDate"
                    />

                <View
                    android:id="@+id/vStartDate"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    app:layout_constraintTop_toBottomOf="@id/ivAdvertisement"
                    android:layout_marginTop="52dp"
                    app:layout_constraintStart_toEndOf="@id/ivCalendar"
                    android:layout_marginStart="23dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="29dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_end_date"
                    android:textAllCaps="false"
                    android:fontFamily="@font/markformc_medium"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#292929"
                    android:lineSpacingExtra="4sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="37dp"
                    app:layout_constraintTop_toBottomOf="@id/tvStart"
                    android:layout_marginTop="22dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="10/07/1996"
                    android:textAllCaps="false"
                    android:fontFamily="@font/markformc_medium"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#292929"
                    android:lineSpacingExtra="4sp"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="@id/vEndDate"
                    app:layout_constraintEnd_toEndOf="@id/vEndDate"
                    app:layout_constraintBottom_toTopOf="@id/vEndDate"
                    />

                <View
                    android:id="@+id/vEndDate"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    app:layout_constraintTop_toBottomOf="@id/vStartDate"
                    android:layout_marginTop="39dp"
                    app:layout_constraintStart_toEndOf="@id/tvEnd"
                    android:layout_marginStart="23dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="29dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnActivate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_activate"
                    android:textAllCaps="false"
                    android:fontFamily="@font/markformc_medium"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    app:cornerRadius="8dp"
                    android:backgroundTint="@color/accent_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="11dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="78dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="78dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clNoSubscription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/clDesc"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNoSubscriptionDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_no_advertisement_desc"
                android:fontFamily="@font/markformc"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#404042"
                android:lineSpacingExtra="10sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="21dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="19dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="19dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBigBannerAdvertisement"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:background="@drawable/bg_delivery_boy_row"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvNoSubscriptionDesc"
                android:layout_marginTop="40dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBigBannerAdvertisement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_promotion_ad"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="21dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="18dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvBigBannerAdvertisement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_create_big_banner"
                    android:fontFamily="@font/markformc"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#292929"
                    android:lineSpacingExtra="4sp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toEndOf="@id/ivBigBannerAdvertisement"
                    android:layout_marginStart="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSmallBannerAdvertisement"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:background="@drawable/bg_delivery_boy_row"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@id/clBigBannerAdvertisement"
                android:layout_marginTop="6dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivSmallBannerAdvertisement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_promotion_ad"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="21dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="18dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSmallBannerAdvertisement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_create_small_banner"
                    android:fontFamily="@font/markformc"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#292929"
                    android:lineSpacingExtra="4sp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toEndOf="@id/ivSmallBannerAdvertisement"
                    android:layout_marginStart="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clLaunchNewProduct"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:background="@drawable/bg_delivery_boy_row"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@id/clSmallBannerAdvertisement"
                android:layout_marginTop="6dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivLaunchNewProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_promotion_new_product"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="21dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="18dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLaunchNewProduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_launch_new_product"
                    android:fontFamily="@font/markformc"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#292929"
                    android:lineSpacingExtra="4sp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toEndOf="@id/ivLaunchNewProduct"
                    android:layout_marginStart="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>