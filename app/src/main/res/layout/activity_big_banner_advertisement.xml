<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDesc"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_hire_delivery_boy"
            android:elevation="2dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_arrow"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="26dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivMyShopLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_logo_my_shop_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBigBannerAdvertisement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_promotion_ad"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"
                app:layout_constraintTop_toBottomOf="@id/ivMyShopLogo"
                android:layout_marginTop="40dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBigBannerAdvertisement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_create_big_banner"
                android:fontFamily="@font/markformc"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#292929"
                android:lineSpacingExtra="4sp"
                app:layout_constraintTop_toBottomOf="@id/ivMyShopLogo"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toEndOf="@id/ivBigBannerAdvertisement"
                android:layout_marginStart="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPromotionPaymentDesc"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="@drawable/bg_delivery_boy_row"
            app:layout_constraintTop_toBottomOf="@id/clDesc"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_promotion_payment_desc"
                android:fontFamily="@font/markformc"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#404040"
                android:lineSpacingExtra="6sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="19dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_pay_promotion"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:paddingBottom="10dp"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/accent_blue"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="7dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSampleBanners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_sample_banners"
            android:fontFamily="@font/markformc_medium"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#eb008b"
            android:lineSpacingExtra="4sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clPromotionPaymentDesc"
            android:layout_marginTop="14dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="14dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/ic_promotion_sample_banner_arrow"
            app:layout_constraintTop_toBottomOf="@id/clPromotionPaymentDesc"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/tvSampleBanners"
            android:layout_marginStart="7dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBigBannerSample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_big_banner_sample_1"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@id/tvSampleBanners"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_big_banner_sample_2"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@id/ivBigBannerSample"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>