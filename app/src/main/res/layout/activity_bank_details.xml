<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="26dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/layout_toolbar"
                    />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:layout_marginTop="38dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/header_bank_details"
                            android:textSize="14sp"
                            android:textColor="@color/bank_details_blue"
                            android:lineSpacingExtra="4dp"
                            android:fontFamily="@font/markformc"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <LinearLayout
                            android:id="@+id/layoutScanButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvHeader"
                            android:orientation="horizontal"
                            android:layout_marginTop="26dp"
                            android:gravity="center"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvScanTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_scan"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp"
                                android:textColor="@color/accent_blue"
                                android:fontFamily="@font/markformc_medium"
                                />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivQr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_scan_qr"
                                />
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tlUPIAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/markformc"
                            android:hint="@string/lbl_enter_your_upi_address"
                            android:textColorHint="@color/hint_color"
                            style="@style/Widget.Design.TextInputLayout"
                            android:layout_marginTop="21dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/layoutScanButton"
                            app:endIconMode="password_toggle"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etUPIAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/markformc"
                                android:textColorHint="@color/secondary_text_color"
                                android:textColor="@color/primary_text_color"
                                android:textSize="16sp"
                                android:inputType="textPassword"
                                android:paddingBottom="16dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                />
                        </com.google.android.material.textfield.TextInputLayout>


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvUpiHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_target_header"
                            android:textSize="14sp"
                            android:textColor="@color/bank_details_blue"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginTop="63dp"
                            android:fontFamily="@font/markformc"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tlUPIAddress"
                            />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tlTargetPerDay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/markformc"
                            android:hint="@string/lbl_target_per_day"
                            android:textColorHint="@color/hint_color"
                            style="@style/Widget.Design.TextInputLayout"
                            android:layout_marginTop="26dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvUpiHeader"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etTargetPerDay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/markformc"
                                android:textColorHint="@color/secondary_text_color"
                                android:textColor="@color/primary_text_color"
                                android:textSize="16sp"
                                android:inputType="numberDecimal"
                                android:paddingBottom="16dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tlTargetPerWeek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/markformc"
                            android:hint="@string/lbl_target_per_week"
                            android:textColorHint="@color/hint_color"
                            style="@style/Widget.Design.TextInputLayout"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tlTargetPerDay"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etTargetPerWeek"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/markformc"
                                android:textColorHint="@color/secondary_text_color"
                                android:textColor="@color/primary_text_color"
                                android:textSize="16sp"
                                android:inputType="numberDecimal"
                                android:paddingBottom="16dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvSkip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_skip"
                            android:textSize="16sp"
                            android:fontFamily="@font/markformc_medium"
                            android:layout_marginTop="56dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/accent_blue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tlTargetPerWeek"
                            />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonNext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="50dp"
                            android:layout_marginBottom="33dp"
                            android:fontFamily="@font/markformc_medium"
                            android:padding="10dp"
                            android:text="@string/lbl_next"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:backgroundTint="@color/accent_blue"
                            app:cornerRadius="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvSkip"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                             />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>